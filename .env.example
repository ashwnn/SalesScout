# ==================================
# SERVER CONFIGURATION
# ==================================
# Set to 'production' for Docker deployment, 'development' for local dev
NODE_ENV=production
PORT=1534

# Frontend port (when running in separate container)
FRONTEND_PORT=1533

# ==================================
# DATABASE CONFIGURATION
# ==================================
# For local development (non-Docker)
MONGO_URI=mongodb://localhost:27017/redflagdeals

# For Docker deployment
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin123
MONGO_DB_NAME=redflagdeals
MONGO_PORT=27017

# ==================================
# SECURITY CONFIGURATION
# ==================================
# REQUIRED: Change this to a strong random string in production (use: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ==================================
# CORS CONFIGURATION
# ==================================
# Add your production frontend URLs (comma-separated if multiple)
# For separate containers: use http://localhost:1533
# For combined container: use http://localhost:1534
FRONTEND_URL=http://localhost:1533
PRODUCTION_URL=

# React App API URL (for frontend to connect to backend)
REACT_APP_API_URL=http://localhost:1534

# ==================================
# FEATURE FLAGS
# ==================================
# Set to 'true' to allow new user registrations, 'false' to disable
ALLOW_REGISTRATION=false

# Set to 'true' to enable demo mode with a read-only demo account
# Demo credentials: username=demo, password=Demo1234!
DEMO_MODE=true

# ==================================
# RATE LIMITING CONFIGURATION
# ==================================
# Window duration in milliseconds (default: 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Max requests per window for general API endpoints
RATE_LIMIT_MAX_REQUESTS=100

# Max authentication attempts per window (login/register)
RATE_LIMIT_MAX_AUTH=5

# Max scraping requests per window
RATE_LIMIT_MAX_SCRAPE=3

# ==================================
# ADMIN USER CREATION
# ==================================
ADMIN_EMAIL=admin@salesscout.com
ADMIN_PASSWORD=Admin@123
ADMIN_NAME=Admin User

# ==================================
# ANALYTICS CONFIGURATION (UMAMI)
# ==================================
# Enable/disable Umami analytics tracking
REACT_APP_UMAMI_ENABLED=true

# Umami script source URL (where your Umami instance is hosted)
REACT_APP_UMAMI_SRC=

# Your Umami website ID (found in Umami dashboard)
REACT_APP_UMAMI_WEBSITE_ID=

# Optional: Enable automatic event tracking (default: true)
REACT_APP_UMAMI_AUTO_TRACK=true

# Optional: Enable detailed debug logging for Umami (default: false)
REACT_APP_UMAMI_DEBUG=false
